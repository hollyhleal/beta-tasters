<section class="review-user">
  <div>
    <h2 class="page-header m-3">Post a Review</h2>
  </div>
  <div class="container review-user-card">
    <div class="card m-2 review-user-card">
      <div class="card-body review-user-card">
        <!-- route: /api/ratings -->
        <form action="/api/ratings" method="POST">
        
        {{!-- dropdown menu for menu items --}}
        <div class="dropdown text-center">
          <div class="input-group mb-3">
            <span
              class="input-group-text"
              id="inputGroup-sizing-default"
            >Menu Item:</span>
            <input
              type="text"
              class="form-control"
              id="menu_item"
              name="menu_item"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
              required="required"
            />
          </div>
        
          
          {{!-- checkboxes for grabbing the user's rating --}}
          <div class="mt-5">
            <h4>Please provide a rating for this menu item: </h4>
            <div class="form-check form-check-inline">
  <input class="form-check-input rating-radios" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="1-star">
  <label class="form-check-label" for="inlineRadio1">1</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input rating-radios" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="2-star">
  <label class="form-check-label" for="inlineRadio2">2</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input rating-radios" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="3-star">
  <label class="form-check-label" for="inlineRadio3">3</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input rating-radios" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="4-star">
  <label class="form-check-label" for="inlineRadio4">4</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input rating-radios" type="radio" name="inlineRadioOptions" id="inlineRadio5" value="5-star" required="required">
  <label class="form-check-label" for="inlineRadio5">5</label>
</div>

{{!-- textarea for user review input --}}
<div class="input-group">
            <span class="input-group-text mt-5">Review:</span>
            <textarea
              class="form-control mt-5"
              id="review"
              name="review"
              required="required"
            ></textarea>
          </div>

<button type="submit" class="btn btn-lg mt-5 beta-btn" id="user-submit-review-btn">Post Review</button>
          </div>
        </form>
        </div>

      </div>
    </div>

  </div>
</section>